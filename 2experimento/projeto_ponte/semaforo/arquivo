if(lado == LADO_ESQUERDO)
		{
			up(semaforoQueControlaPonte, NUM_CRIANCAS_ESQUERDO);
			
			if(getValorSemaforo(semaforoQueControlaPonte, NUM_CRIANCAS_ESQUERDO) == 1)
				down(semaforoQueControlaPonte, PONTE);

			realizarTravessiaDaPonte(numeroTravessias);

			down(semaforoQueControlaPonte, NUM_CRIANCAS_ESQUERDO);
			up(semaforoQueControlaPonte, MUTEX);

			if(getValorSemaforo(semaforoQueControlaPonte, NUM_CRIANCAS_ESQUERDO) == 0)
				up(semaforoQueControlaPonte, PONTE); 
		}
		else
		{
			up(semaforoQueControlaPonte, NUM_CRIANCAS_DIREITO);
			
			if(getValorSemaforo(semaforoQueControlaPonte, NUM_CRIANCAS_DIREITO) == 1)
				down(semaforoQueControlaPonte, PONTE);

			realizarTravessiaDaPonte(numeroTravessias);
			
			down(semaforoQueControlaPonte, NUM_CRIANCAS_DIREITO);
			up(semaforoQueControlaPonte, MUTEX);

			if(getValorSemaforo(semaforoQueControlaPonte, NUM_CRIANCAS_DIREITO) == 0)
				up(semaforoQueControlaPonte, PONTE); 
		}
